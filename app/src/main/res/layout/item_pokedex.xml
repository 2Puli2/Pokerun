<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_pokedex_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardElevation="6dp"
    app:cardCornerRadius="16dp"
    app:strokeWidth="2dp"
    app:strokeColor="@color/masterball_light">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Contenedor de imagen con fondo decorativo -->
        <FrameLayout
            android:id="@+id/frame_pokemon_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <!-- Fondo circular decorativo -->
            <View
                android:id="@+id/view_image_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_pokemon_image_circle" />

            <!-- Imagen del Pokémon -->
            <ImageView
                android:id="@+id/iv_pokemon_image"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                android:contentDescription="@string/pokemon_image"
                android:src="@drawable/ic_pokemon_placeholder" />

        </FrameLayout>

        <!-- Número de Pokédex con estilo badge -->
        <TextView
            android:id="@+id/tv_pokedex_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:background="@drawable/bg_number_badge"
            android:paddingHorizontal="10dp"
            android:paddingVertical="4dp"
            android:text="#001"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/masterball_white"
            app:layout_constraintStart_toEndOf="@id/frame_pokemon_image"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Nombre del Pokémon -->
        <TextView
            android:id="@+id/tv_pokedex_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="8dp"
            android:text="Pokemon Name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/frame_pokemon_image"
            app:layout_constraintTop_toBottomOf="@id/tv_pokedex_number" />

        <!-- Tipos con chips -->
        <LinearLayout
            android:id="@+id/layout_types"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="6dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toEndOf="@id/frame_pokemon_image"
            app:layout_constraintTop_toBottomOf="@id/tv_pokedex_name"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/tv_pokedex_types"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_type_chip"
                android:paddingHorizontal="10dp"
                android:paddingVertical="4dp"
                android:text="Tipo"
                android:textSize="11sp"
                android:textColor="@color/masterball_white" />

        </LinearLayout>

        <!-- Descripción -->
        <TextView
            android:id="@+id/tv_pokedex_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="4dp"
            android:text="Descripción del Pokémon"
            android:textSize="11sp"
            android:textColor="@color/text_secondary"
            android:maxLines="2"
            android:ellipsize="end"
            android:lineSpacingExtra="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/frame_pokemon_image"
            app:layout_constraintTop_toBottomOf="@id/layout_types"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- Indicador de desbloqueado -->
        <ImageView
            android:id="@+id/iv_unlock_indicator"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_pokeball_unlocked"
            android:visibility="gone"
            android:contentDescription="@string/unlocked"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
